<% if resource.youtube_url.present? %>
  <video
    class="media-video video-js vjs-default-skin"
    controls
    data-setup='{ "techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "<%= resource.youtube_url %>"}], "fluid": true, "playbackRates": [1, 1.5, 2] }'>
  </video>
<% elsif resource.video.present? %>
    <video class="media-video video-js vjs-default-skin"
      controls preload="none" poster="<%= url_for resource.banner %>"
      data-setup='{ "aspectRatio":"16:9", "fluid": true, "playbackRates": [1, 1.5, 2] }'>
      <source src="https://vjs.zencdn.net/v/oceans.mp4" type='video/mp4' />
      <source src="https://vjs.zencdn.net/v/oceans.webm" type='video/webm' />
    </video>
<% elsif resource.audio.present? %>
  <audio class="media-audio video-js vjs-default-skin"
    controls preload="auto" poster="<%= url_for resource.banner %>"
    data-setup='{ "fluid": true, "playbackRates": [1, 1.5, 2] }'>
    <source src="<%= url_for resource.audio %>" type='audio/mp3'/>
  </audio>
<% elsif resource.banner.present? %>
  <%= image_tag resource.banner, class: 'media-image' %>
<% end %>
