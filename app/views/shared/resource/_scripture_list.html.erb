<% resource.connection_scriptures.each_with_index do |connection_scripture, i| %>
  <% if i>0 && resource.connection_scriptures[i-1].scripture.name == connection_scripture.scripture.name %>
    , <%= link_to connection_scripture.range, scripture_path(connection_scripture.scripture_id, resource_type: params[:resource_type]) %>
  <% else %>
    <%= link_to connection_scripture.name, scripture_path(connection_scripture.scripture_id, resource_type: params[:resource_type]) %>
  <% end %>
<% end %>