<% title 'My Account' %>
<%= simple_form_for(resource, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <header>
    <h3 class="text-primary font-weight-normal mb-0">
      My <span class="font-weight-bold">Account</span>
    </h3>
  </header>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= render partial: 'shared/user', locals: { f: f } %>
  <hr>
  <div class="d-flex">
    <div class="mr-auto"></div>
    <%= link_to 'Cancel', root_path, class: 'btn btn-link' %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
